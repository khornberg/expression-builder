<div class="expression-builder">
  <div class="expression-blocks">
  {{#each blocks as |block|}}
    {{expression-block options=options operators=operators update=(action "update") block=block}}
  {{/each}}
  {{#if hasOptions}}
    {{component addComponent add=(action "add")}}
  {{/if}}
  </div>
  <div class="expression-result">{{expression}}</div>
</div>
